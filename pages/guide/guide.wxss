/* pages/guide/guide.wxss */
.guide-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
  padding: 0 0 30rpx 0;
}

.guide-header {
  padding: 20rpx;
  background-color: #ffffff;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.guide-content {
  flex: 1;
  width: 100%;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow-y: auto;
  padding: 0;
}

.guide-content-inner {
  padding: 20rpx 25rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 15rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #666666;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  padding: 0 30rpx;
}

.error-text {
  font-size: 24rpx;
  color: #e74c3c;
  text-align: center;
  margin-top: 15rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  padding: 0 30rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

/* 说明内容样式 */
.guide-text {
  font-size: 18rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 自定义滚动条样式 */
::-webkit-scrollbar {
  width: 6rpx;
  background-color: #f5f5f5;
}

::-webkit-scrollbar-thumb {
  background-color: #ddd;
  border-radius: 10rpx;
}

/* 优化rich-text内容显示 */
rich-text {
  display: block;
  width: 100%;
}

/* 优化列表显示 */
rich-text ul, rich-text ol {
  padding-left: 30rpx;
} 